# Server
NODE_ENV=development
PORT=3000
CORS_ORIGIN=*

# Database
DB_HOST=localhost
DB_USERNAME=root
DB_PASSWORD=
DB_NAME=swara_db

# JWT
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-jwt-refresh-secret-key-here
JWT_REFRESH_EXPIRES_IN=30d

# Midtrans Payment Gateway
MIDTRANS_SERVER_KEY=your-midtrans-server-key
MIDTRANS_CLIENT_KEY=your-midtrans-client-key
MIDTRANS_IS_PRODUCTION=false

# Midtrans Callback URLs
MIDTRANS_FINISH_URL=https://your-app.com/payment/finish
MIDTRANS_ERROR_URL=https://your-app.com/payment/error
MIDTRANS_PENDING_URL=https://your-app.com/payment/pending

# AI Service (Optional)
AI_SERVICE_API_KEY=your-ai-service-api-key
AI_SERVICE_URL=https://api.your-ai-service.com

# Cloudinary
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# ==============================================
# SCHOOL PARTNERSHIP FEATURE
# ==============================================

# Email Configuration (untuk kirim kredensial ke admin sekolah)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-gmail-app-password

# App URL (untuk link di email)
APP_URL=http://localhost:3000

# Midtrans Skip Verification (untuk development/testing)
MIDTRANS_SKIP_VERIFICATION=false

# Daily Co
DAILY_KEY=
